source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

def import_pods
    pod 'XCGLogger', '~> 4.0.0'
end

target 'lf iOS'  do
    platform :ios, '8.0'
    import_pods
end

target 'lf macOS' do
    platform :osx, '10.11'
    import_pods
end

target 'Example iOS'  do
    platform :ios, '8.0'
    import_pods
end

target 'Example macOS' do
    platform :osx, '10.11'
    import_pods
end

target 'Tests' do
    platform :osx, '10.11'
    import_pods
end

target 'Tests Objective-C' do
    platform :osx, '10.11'
    import_pods
end

